{
    "compilerOptions": {
        "lib": ["ESNext"],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ESNext",
        "declaration": true,
        "outDir": "build",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "./typescript/structures",
        "./typescript/logs",
        "./typescript/util",
        "./typescript/index.ts"
    ],
    "exclude": [".//build/**/*"]
}